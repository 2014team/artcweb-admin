<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.artcweb.dao.OrderDao">

	<resultMap type="com.artcweb.baen.Order" id="result">
		<result property="id" column="id" />
		<result property="orderName" column="order_name" />
		<result property="orderImage" column="order_image" />
		<result property="step" column="step" />
		<result property="currentStep" column="current_step" />
		<result property="userId" column="user_id" />
		<result property="sort" column="sort" />
		<result property="createDate" column="create_date" />
		<result property="updateDate" column="update_date" />
	</resultMap>


	<!--保存 -->
	<insert id="save" parameterType="com.artcweb.baen.Order">
		insert into
		order(order_name,order_image,step,current_step,user_id,sort,create_date,update_date)
		values(#{orderName},#{orderImage},#{step},#{currentStep},#{userId},#{sort},now(),now())
	</insert>

	<!--删除 -->
	<delete id="delete" parameterType="Integer">
		delete from
		order
		where id=#{id}
	</delete>

	<delete id="deleteByBatch" parameterType="String">
		delete from
		order
		where
		FIND_IN_SET (id,#{id})
	</delete>


	<!-- 修改 -->
	<update id="update" parameterType="com.artcweb.baen.Order">
		update order
		set
		order_name=#{orderName}
		order_image=#{orderImage}
		step=#{step}
		current_step=#{currentStep}
		user_id=#{userId}
		sort=#{sort}
		,update_date=now()
		where id=#{id}
	</update>

	<!-- 查找 -->
	<select id="get" parameterType="Integer" resultMap="result">
		select * from
		order
		where id = #{id}
		limit 1
	</select>








</mapper> 